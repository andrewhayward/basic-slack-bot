{
  "name": "basic-slack-bot",
  "description": "A basic Slack bot",
  "version": "1.0.0",
  "main": "bot",
  "license": "ISC",
  "homepage": "https://github.com/andrewhayward/basic-slack-bot",
  "bugs": "https://github.com/andrewhayward/basic-slack-bot/issues",
  "scripts": {
    "lint": "eslint",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andrewhayward/basic-slack-bot.git"
  },
  "dependencies": {
    "@slack/client": "^3.14.1"
  },
  "devDependencies": {
    "eslint": "^4.10.0",
    "eslint-config-airbnb-standard": "^1.6.5",
    "eslint-plugin-jest": "^21.3.2",
    "jest": "^21.2.1",
    "pre-commit": "^1.2.2"
  },
  "pre-commit": [
    "lint"
  ],
  "eslintConfig": {
    "env": {
      "jest/globals": true
    },
    "extends": "airbnb-standard",
    "plugins": [
      "jest"
    ],
    "rules": {
      "object-shorthand": [1, "consistent-as-needed"],
      "no-underscore-dangle": [0, {"allowAfterThis": true, "allowAfterSuper": true}],
      "no-param-reassign": [0, {"props": false}]
    },
    "root": true
  }
}
